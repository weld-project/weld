macro map(data, func) = (
  result(for(data, appender, |b, i, x| merge(b, func(x))))
);

macro filter(data, func) = (
  result(for(data, appender, |b, i, x| if(func(x), merge(b, x), b)))
);

macro agg(data, ty, func) = (
  result(for(data, merger[ty,func], |b, i, x| merge(b, x)))
);

macro flatten(data) = (
    result(for(
        data,
        appender[?],
        |b, x| for(x, b, |b2, i2, x2| merge(b2, x2))
    ))
);
